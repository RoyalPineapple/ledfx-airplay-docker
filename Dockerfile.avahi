FROM alpine:latest

RUN apk add --no-cache avahi avahi-tools dbus

# Create directories  
RUN mkdir -p /var/run/dbus /var/run/avahi-daemon

# Copy Avahi config (will be overridden by volume mount)
COPY configs/avahi-daemon.conf /etc/avahi/avahi-daemon.conf

# Startup script - create D-Bus daemon and share with shairport-sync
RUN echo '#!/bin/sh' > /start.sh && \
    echo '# Clean stale PID/socket files' >> /start.sh && \
    echo 'rm -f /var/run/dbus/pid /run/dbus/pid /run/avahi-daemon/pid /var/run/avahi-daemon/pid /var/run/dbus/system_bus_socket' >> /start.sh && \
    echo 'mkdir -p /var/run/dbus /var/run/avahi-daemon' >> /start.sh && \
    echo '# Start D-Bus daemon (shared with shairport-sync via bind mount)' >> /start.sh && \
    echo 'dbus-daemon --system --nofork --nopidfile &' >> /start.sh && \
    echo 'for i in $(seq 1 10); do' >> /start.sh && \
    echo '  if [ -S /var/run/dbus/system_bus_socket ]; then' >> /start.sh && \
    echo '    if timeout 2 dbus-send --system --print-reply --dest=org.freedesktop.DBus /org/freedesktop/DBus org.freedesktop.DBus.ListNames >/dev/null 2>&1; then' >> /start.sh && \
    echo '      echo \"D-Bus is ready\"' >> /start.sh && \
    echo '      break' >> /start.sh && \
    echo '    fi' >> /start.sh && \
    echo '  fi' >> /start.sh && \
    echo '  echo \"Waiting for D-Bus...\"' >> /start.sh && \
    echo '  sleep 1' >> /start.sh && \
    echo 'done' >> /start.sh && \
    echo '# Start avahi-daemon' >> /start.sh && \
    echo 'avahi-daemon -D' >> /start.sh && \
    echo 'sleep 1' >> /start.sh && \
    echo '# Detect host IP (Avahi runs on host networking)' >> /start.sh && \
    echo 'HOST_IP=$(ip route get 8.8.8.8 2>/dev/null | awk '"'"'{print $7}'"'"' | head -1)' >> /start.sh && \
    echo 'if [ -z "$HOST_IP" ] || [ "$HOST_IP" = "127.0.0.1" ]; then' >> /start.sh && \
    echo '  HOST_IP=$(ip addr show | grep -E "inet " | grep -v "127.0.0.1" | grep -vE "172\\.(1[6-9]|2[0-9]|3[0-1])\\." | awk '"'"'{print $2}'"'"' | cut -d/ -f1 | head -1)' >> /start.sh && \
    echo 'fi' >> /start.sh && \
    echo 'if [ -n "$HOST_IP" ] && [ "$HOST_IP" != "127.0.0.1" ]; then' >> /start.sh && \
    echo '  echo "Avahi detected host IP: $HOST_IP"' >> /start.sh && \
    echo '  # Write IP to shared file for shairport-sync to read' >> /start.sh && \
    echo '  echo "$HOST_IP" > /var/run/avahi-daemon/host-ip.txt' >> /start.sh && \
    echo 'fi' >> /start.sh && \
    echo 'exec tail -f /dev/null' >> /start.sh && \
    chmod +x /start.sh

ENTRYPOINT ["/start.sh"]

